#!/usr/bin/perl
use strict;
use warnings;

my $usage = "Usage:
  $0 devname
     finds the first device named 'devname#' and prints it
     if 'dev' attribute is set, uses that instead
";

sub main(@){
  my $dev = shift;
  die $usage if not defined $dev;

  my @ifconfig = `ifconfig -a`;

  for my $line(@ifconfig){
    if($line =~ /^($dev\d+) /){
      print "$1\n";
      exit 0;
    }
  }

  die "No device named $dev found\n";
}

&main(@ARGV);
